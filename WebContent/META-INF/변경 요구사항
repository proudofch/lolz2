--게시판 샘플
insert into board(boardnum, id, boardtype, boardtitle, boardcontent, boarddate)
values(boardseq.nextval, 'bit1004', 1, '안녕하세요', '반갑습니다', sysdate);
insert into board(boardnum, id, boardtype, boardtitle, boardcontent, boarddate)
values(boardseq.nextval, 'bit1004', 1, '안녕', '야옹야옹', sysdate);

